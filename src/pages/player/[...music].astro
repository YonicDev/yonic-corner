---
import { getCollection, type CollectionEntry } from "astro:content";

import "@lib/styles/player.scss";
import "@lib/styles/themes/dark-player.scss";

export async function getStaticPaths() {
    const songList = await getCollection("music");
    return songList.map((song) => {
        return {
            params: { music: song.id },
            props: { music: song.data }
        }
    });
}

const {title, sources, author, album} = Astro.props.music;

const invidiousInstance = import.meta.env.INVIDIOUS_DEFAULT_INSTANCE;

const adaptiveFields = [
    { itag: 251, type: 'audio/webm; codecs="opus"'},
    { itag: 250, type: 'audio/webm; codecs="opus"'},
    { itag: 249, type: 'audio/webm; codecs="opus"'},
    { itag: 140, type: 'audio/mp4; codecs="mp4a.40.2"'},
    { itag: 139, type: 'audio/mp4; codecs="mp4a.40.5"'},
]

interface Props {
    music: CollectionEntry<"music">["data"]
}

const archiveFormats = {
    "VBR MP3" : "audio/mpeg"
}

type ArchiveItem = {
    d1: string,
    d2: string,
    dir: string,
    files: {
        name: string,
        length: string,
        format: keyof typeof archiveFormats,
    }[]
}

---

<html>
    <head>
        <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Asap:ital,wght@0,400;0,600;1,400;1,600&family=Blinker:wght@600&family=Bungee&family=Fira+Code&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Asap:ital,wght@0,400;0,600;1,400;1,600&family=Blinker:wght@600&family=Bungee&family=Fira+Code&display=swap"></noscript>
		<noscript><link rel="stylesheet" href="/static-themes/dark-player.css"/></noscript>
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<meta name="generator" content={Astro.generator} />
        <meta name="robots" content="noindex, nofollow" />
        <script is:inline>
            var otherWindow;

            window.setOtherWindow = function(value) {
                otherWindow = value;
            }

            window.setTheme = function() {
                var theme = (function() {
                    var localTheme = localStorage.getItem("theme");
                    if ( typeof localStorage !== "undefined" && localTheme != null && localTheme !== "auto") {
                        return localTheme;
                    }
                    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                        return "dark";
                    }
                    return "light";
                })()
    
                document.documentElement.setAttribute("data-theme", theme);
            }
            window.setTheme();

            document.addEventListener("DOMContentLoaded", function() {
                var audio = document.getElementById("audio");
                var sources = audio.getElementsByTagName("source");
                var lastSource = sources[sources.length-1];
                if(lastSource.src != "") {
                    lastSource.onerror = function(e) {
                        console.log(e.target.src);
                        document.getElementById("label").innerHTML = "Could not load the music!"
                    }
                }
            });

        </script>
    </head>
    <body>
        <p id="label">{[title, album, author].filter(data => data!=null).join(" | ")}</p>
        <audio id="audio" controls autoplay loop>
            { sources.flatMap(async (source) => { 
                if(source.type === "youtube") {
                    return adaptiveFields.map(({itag, type}) => {
                        return <source src={`${invidiousInstance}/latest_version?id=${source.src}&itag=${itag}`} {type} />
                    })
                } else if(source.type === "iarchive") {
                    try {
                        const { item, file } = source.src;
                        const archiveItem = await (await fetch(`https://archive.org/metadata/${item}`)).json() as ArchiveItem;
                        const archiveFile = archiveItem.files.find(({name}) => file === name );
                        if(!archiveFile) {
                            console.warn(`Could not find IArchive music file ${file} from item ${item}`);
                            return;
                        }
                        return [archiveItem.d1,archiveItem.d2].map(server => {
                            const src = encodeURI(`https://${server}${archiveItem.dir}/${archiveFile.name}`);
                            return <source {src} type={archiveFormats[archiveFile.format]} />
                        });
                    } catch {
                        return;
                    }
                } else {
                    return <source src={source.src} type={source.type} />
                }
            }) }
        </audio>
    </body>
</html>