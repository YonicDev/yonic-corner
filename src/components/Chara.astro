---
export interface Props {
    name: string;
    set?: string;
    sprite: string;
    thoughts?: string;
    height?: number;
    position?: "left"|"right";
}

const { name, set = "default", sprite, thoughts, height = 200, position = "right" } = Astro.props;
---

<img aria-hidden={true} class="chara" src={`/chara/${name}/${set}/${sprite}.svg`} alt={name} title={thoughts} {height} style={`float: ${position}`}/>
<br style="clear: both"/>

<style is:global>
    .chara {
        filter: drop-shadow(4px 4px 0px rgba(0,0,0,0.25));
        margin: 1rem;
        cursor: url('/img/cursors/think.png') 0 32, help;
    }
</style>