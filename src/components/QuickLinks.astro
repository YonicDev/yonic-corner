---
    import type { CollectionEntry } from "astro:content";

    export interface Props {
        prev?: CollectionEntry<"blog">,
        next?: CollectionEntry<"blog">,
        series?: string,
        seriesUrl?: string,
        category?: Category
    }

    const { prev, next, series = "All posts", seriesUrl="/blog", category } = Astro.props
---

<div class="navigator" style={category? `--border-color: ${category.emphasisColor}; --nav-color-dark: ${category.baseColor}`: undefined}>
    <div>
        {
            prev &&
            <a href={`/blog/article/${prev.slug}`}>
                <b>&larr; PREV</b>
                <br/>
                {prev.data.title}{prev.data.draft && <sup>[draft]</sup>}
            </a>
        }
    </div>
    <div class="series"><a href={seriesUrl}>{series}</a></div>
    <div style="text-align: right">
        {
            next &&
            <a href={`/blog/article/${next.slug}`}>
                <b>NEXT &rarr;</b>
                <br/>
                {next.data.title}{next.data.draft && <sup>[draft]</sup>}
            </a>
        }
    </div>
</div>

<style lang="scss">
    @use "../styles/util.scss";

    .navigator {
        display: flex;
        width: 100%;
        max-width: 800px;
        justify-content: center;
        align-items: stretch;
        border: 2px solid var(--border-color, var(--emphasis-color));
        box-shadow: util.extrude(8, var(--border-color, var(--emphasis-color)));
        background-color: var(--base-color);
        margin: 0 auto;
        margin-bottom: 2rem;
        font-size: 18px;
        div {
            padding: 5px 1rem;
            display: flex;
            flex-direction: column;
            width: 40%;
            b {
                letter-spacing: 2px;
            }
            a {
                width: 100%;
                color: var(--border-color, var(--emphasis-color));
                text-decoration: none;
            }
        }
        .series {
            width: 20%;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            border: solid var(--border-color, var(--emphasis-color));
            border-width: 0 4px 0 4px;
            text-align: center;
            font-weight: bold;
            background: var(--nav-color-dark);
            a {
                color: var(--border-color, var(--article-color));
            }
        }
    }

    @media screen and (max-width: 768px) {
        .navigator {
            max-width: none;
            margin: 0 auto;
            padding: 0 1em;
            border-width: 0;
            border-top-width: 2px;
            font-size: 10pt;
            .series {
                border-width: 0px 2px 0px 2px;
            }
        }
    }
</style>